html
  head
    title Look Books
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js")
body
  .ui.grid
    .three.column.centered.row
        h1.ui.header Look Books
    .three.column.centered.row
      .ui.search
        form.ui.form(method="get" action="/search")
          .ui.icon.input
            input.prompt(type="text" name="q" placeholder="Search books")
            button.ui.icon.basic.circular.button(type="submit")
              i.search.icon

  if books.length > 0
    .ui.stackable.three.column.centered.grids.cards
      each book in books
          .ui.card
            a(href=book.url target="_blank")
              img.ui.centered.image.small(src=book.image)
            .content
              a.header #{book.title}
              if book.authors
                p Written By #{formatForDisplay(book.authors)}
            .meta
              if book.publisher
                p Published by #{book.publisher}


 

html
  head
    title Look Books
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js")
body
  .ui.grid
    .three.column.centered.row
        h1.ui.header Look Books
    .three.column.centered.row
      .ui.search
        form.ui.form
          .ui.icon.input
            input.prompt(type="text" name="search_term" placeholder="Search books")
            button.ui.icon.basic.circular.button(type="submit")
              i.search.icon

  .ui.stackable.four.column.centered.grid
    each book in books
      .column
        .ui.card
          .image
            .a(href=book.url)
              img(src=book.image)
          .content
            a.header #{book.title}
          .meta
            Published by #{book.publisher}
  

 

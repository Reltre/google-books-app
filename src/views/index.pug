html
  head
    title Look Books
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js")
body
  .ui.grid
    .three.column.centered.row
        h1.ui.header Look Books
    .three.column.centered.row
      .ui.search
        form.ui.form(method="get" action="/search")
          .ui.icon.input
            input.prompt(type="text" name="q" placeholder="Search books")
            button.ui.icon.basic.circular.button(type="submit")
              i.search.icon

  if notfound
    include includes/notFound.pug
  else if books
    include includes/books.pug

    